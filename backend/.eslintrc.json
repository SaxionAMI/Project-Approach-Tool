{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "max-len": ["error", { "code": 140 }],
        "quotes": ["error", "double"],
        "linebreak-style": 0,
        "indent": 0,
        "object-curly-spacing": ["error", "always"],
        "space-before-function-paren": 0,
        "comma-dangle": 0,
        "new-cap": ["error", { "capIsNewExceptions": ["Router"] }]
    }
}
